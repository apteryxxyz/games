{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["package.json", "tsconfig.json", "src/**"],
            "outputs": [".next/**", "dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"],
            "inputs": ["package.json", "tsconfig.json", "src/**"],
            "outputs": []
        },
        "format": {
            "dependsOn": ["^format"],
            "inputs": ["package.json", "tsconfig.json", "src/**"],
            "outputs": []
        }
    }
}
