{
    "name": "api",
    "version": "2.1.0",
    "main": "dist/index.js",
    "scripts": {
        "lint": "eslint --ext .js,.ts src",
        "format": "prettier --write \"src/**/*.{js,ts}\" && npm run lint -- --fix",
        "start": "node ./dist/index.js",
        "build": "tsup src/index.ts --config tsup.config.ts",
        "dev": "npm run build && npm run start"
    },
    "dependencies": {
        "@qwaroo/common": "workspace:^0.0.0",
        "@qwaroo/database": "workspace:^0.0.0",
        "@qwaroo/middleware": "workspace:^0.0.0",
        "@qwaroo/server": "workspace:^0.0.0",
        "@qwaroo/types": "workspace:^0.0.0",
        "co-body": "^6.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "dotenv-expand": "^9.0.0",
        "express": "^4.18.2",
        "passport": "^0.6.0",
        "passport-discord": "^0.1.4",
        "passport-oauth2": "^1.7.0",
        "passport-oauth2-refresh": "^2.1.0",
        "passport-reddit": "github:Slotos/passport-reddit#master",
        "rate-limiter-flexible": "^2.4.1"
    },
    "devDependencies": {
        "@types/co-body": "^6.1.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/express-serve-static-core": "^4.17.33",
        "@types/passport": "^1.0.12",
        "@types/passport-discord": "^0.1.6",
        "@types/passport-oauth2": "^1.4.12",
        "@types/passport-oauth2-refresh": "^1.1.1",
        "@types/qs": "^6.9.7",
        "eslint": "^8.37.0",
        "tsup": "^6.7.0"
    },
    "nx": {
        "targets": {
            "format": {
                "dependsOn": [
                    "^format"
                ],
                "outputs": [
                    "{projectRoot}/src"
                ]
            },
            "build": {
                "dependsOn": [
                    "^build"
                ],
                "outputs": [
                    "{projectRoot}/dist"
                ]
            }
        }
    }
}
