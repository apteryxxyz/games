{
    "name": "qwaroo",
    "private": true,
    "packageManager": "yarn@3.5.1",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "prepare-for:development": "node ./scripts/prepare-environment.js development",
        "prepare-for:production": "node ./scripts/prepare-environment.js production",
        "prepare-for:staging": "node ./scripts/prepare-environment.js staging",
        "prepare-for:reset": "node ./scripts/prepare-environment.js reset",
        "deploy-to:production": "docker compose up -d --build www",
        "deploy-to:staging": "docker compose up -d --build www-staging"
    },
    "devDependencies": {
        "@anatine/esbuild-decorators": "^0.2.19",
        "@next/eslint-plugin-next": "^13.4.3",
        "@rushstack/eslint-patch": "^1.2.0",
        "@typescript-eslint/eslint-plugin": "^5.59.6",
        "@typescript-eslint/parser": "^5.59.6",
        "esbuild": "^0.17.19",
        "eslint": "^8.41.0",
        "eslint-config-apteryx": "^2.0.7",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^44.2.4",
        "eslint-plugin-n": "^16.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-sonarjs": "^0.19.0",
        "eslint-plugin-unicorn": "^47.0.0",
        "prettier": "^2.8.8",
        "prettier-config-apteryx": "^2.0.3",
        "ts-config-apteryx": "^2.0.0",
        "tsup": "^6.7.0",
        "turbo": "^1.9.9",
        "typescript": "^5.0.4"
    },
    "prettier": "prettier-config-apteryx"
}