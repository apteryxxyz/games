{
  "name": "qwaroo",
  "private": true,
  "packageManager": "yarn@3.6.1",
  "workspaces": [
    "packages/*",
    "packages/config/*",
    "apps/*"
  ],
  "scripts": {
    "prepare-for:development": "node ./scripts/prepare-environment.js development",
    "prepare-for:staging": "node ./scripts/prepare-environment.js staging",
    "prepare-for:reset": "node ./scripts/prepare-environment.js reset",
    "deploy-to:staging": "npx pm2 startOrReload pm2.staging.config.js",
    "with-env": "dotenv -e ./.env --",
    "build": "turbo build --filter='./packages/*'",
    "dev": "turbo dev --parallel --filter='./packages/*'",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\" --ignore-path .gitignore",
    "lint": "turbo lint"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.45.0",
    "nx": "^16.5.4",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "ts-config-apteryx": "^2.1.0",
    "tslib": "^2.6.0",
    "tsup": "^7.1.0",
    "turbo": "^1.10.9",
    "typescript": "^5.1.6"
  },
  "resolutions": {
    "next@^13.4.12": "patch:next@npm%3A13.4.12#./.yarn/patches/next-npm-13.4.12-8d241ae02f.patch"
  }
}
