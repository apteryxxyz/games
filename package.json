{
    "name": "qwaroo",
    "private": true,
    "workspaces": ["packages/*", "apps/*"],
    "scripts": {
        "build": "lerna run build",
        "build:packages": "lerna run build --scope @qwaroo/*",
        "dev": "lerna run dev",
        "format": "lerna run format",
        "format:packages": "lerna run format --scope @qwaroo/*",
        "graph": "nx graph",
        "lint": "lerna run lint",
        "lint:packages": "lerna run lint --scope @qwaroo/*",
        "nginx": "node scripts/nginx.js",
        "prepare": "husky install",
        "pull": "git reset --hard HEAD && git pull",
        "start": "pm2 startOrReload ecosystem.config.js",
        "stop": "pm2 stop ecosystem.config.js",
        "reload": "pm2 startOrReload ecosystem.config.js",
        "restart": "pm2 startOrRestart ecosystem.config.js"
    },
    "prettier": "prettier-config-apteryx",
    "devDependencies": {
        "@commitlint/cli": "^17.4.4",
        "@commitlint/config-conventional": "^17.4.4",
        "@commitlint/config-pnpm-scopes": "^17.4.2",
        "@next/eslint-plugin-next": "^13.2.4",
        "@rushstack/eslint-patch": "^1.2.0",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "dotenv": "^16.0.3",
        "dotenv-expand": "^9.0.0",
        "eslint": "^8.36.0",
        "eslint-config-apteryx": "^2.0.4",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^39.9.1",
        "eslint-plugin-n": "^15.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-sonarjs": "^0.16.0",
        "eslint-plugin-typescript-sort-keys": "^2.1.0",
        "eslint-plugin-unicorn": "^45.0.2",
        "husky": "^8.0.3",
        "lerna": "^6.5.1",
        "nx": "^15.8.5",
        "prettier": "^2.8.4",
        "prettier-config-apteryx": "^2.0.3",
        "ts-config-apteryx": "^2.0.0",
        "tsup": "^6.6.3",
        "typescript": "^4.9.5"
    }
}
