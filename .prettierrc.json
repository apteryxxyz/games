{
    "printWidth": 80,
    "endOfLine": "lf",

    "tabWidth": 4,
    "useTabs": false,

    "trailingComma": "es5",
    "semi": true,

    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "as-needed",

    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",

    "overrides": [
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "parser": "json"
            }
        }
    ]
}
